<h2>Edit Your Recipe</h2>

<%= form_for(@recipe) do |f| %> 
    <%= f.label :title, "Title: " %>
    <%= f.text_field :title, placeholder: "#{@user.recipe(title)}"%> 
    <br>
    <br>
    <%= f.label :description, "Description: " %>
    <%= f.text_field :description, placeholder: "#{@user.recipe(description)}" %>
    <br>
    <br>
    <%= f.submit "Submit" %>
<% end %>

<p class="button"><%= button_to 'Delete Recipe', recipe_path(@recipe), method: 'delete' %></p>

<p><%= button_to 'Return to the homepage', users_path, method: 'get' %></p>


