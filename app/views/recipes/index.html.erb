

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <%= form_tag("/recipes", method: 'get') do %>
              <%= label_tag(:q, "Search for: ") %>
              <%= text_field_tag(:q) %>
              <%= submit_tag("Search") %>
            <% end %>
        </div>
        <div class="col-lg-6">
            <ul>
              <% @recipes.each do |recipe| %>
                <li><%= link_to recipe.title, recipe_path(recipe) %></li>
              <% end %>
            </ul> 
        </div> 
        
    </div>
</div>