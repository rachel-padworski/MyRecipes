<h2>Edit your comment</h2>

<%= form_for(@comment) do |f| %> 
     
    <%= f.label :content, "Comment: " %>
    <%= f.text_field :content, placeholder: "Update your comment" %>
    <br>
    <br>
    <%= f.submit "Submit" %>
<% end %>

<h2 class="button"><%= button_to 'Delete Comment', comment_path(@comment), method: 'delete' %></h2>

<h2 class="button"><%= button_to 'Return to the homepage', recipes_path %></h2>


